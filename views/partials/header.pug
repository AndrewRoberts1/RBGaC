.fixed-top
      // Top Navbar
      nav.navbar.navbar-light.bg-white
        .container-fluid
          a(href='/')
            // Home button
            img.img-fluid.navbar-brand(src='/images/Rock Bottom Gear & Co Logo.png', alt='Rock Bottom Gear & Co Logo')
          |  
          ul.navbar-nav.flex-row.ms-lg-auto
            li.nav-item.col-2.col-md-auto.ms-2.me-2
              button#navOptionsButton.navButton(data-options='false', data-bs-toggle='collapse', data-bs-target='#navbarToggleExternalContent', aria-controls='navbarToggleExternalContent', aria-expanded='false', aria-label='Toggle navigation')
                svg.bi.bi-text-paragraph(xmlns='http://www.w3.org/2000/svg', width='22', height='22', fill='currentColor', viewBox='0 0 16 16')
                  path(fill-rule='evenodd', d='M2 12.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm4-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z')
            
            li.nav-item.col-2.col-md-auto.ms-2.me-2
              a(href='/customer_account')
                button.navButton
                  svg.bi.bi-person-fill(xmlns='http://www.w3.org/2000/svg', width='25', height='25', fill='currentColor', viewBox='0 0 16 16')
                    path(d='M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z')
            
            li.nav-item.col-2.col-md-auto.ms-2.me-4
              a(href='/basket')
                button.navButton
                  svg.bi.bi-cart3(xmlns='http://www.w3.org/2000/svg', width='25', height='25', fill='currentColor', viewBox='0 0 16 16')
                    path(d='M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .49.598l-1 5a.5.5 0 0 1-.465.401l-9.397.472L4.415 11H13a.5.5 0 0 1 0 1H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l.84 4.479 9.144-.459L13.89 4H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z')
      // Collapse section of the navbar
      #navbarToggleExternalContent.collapse.navbar-collapse.sticky-top
        .row.bg-white.p-3.justify-content-center
          .col-md-10
            // Grid system to center the buttons a fixed distance from each other at the center of the page
            .row.justify-content-center.navLinkDiv
              .col.d-grid.gap-2
                a#navHomeButton.navLink(href='/') Home
               
              .col.d-grid.gap-2.navLinkDiv
                a#navAboutButton.navLink(href='/about') About Us
               
              .col.d-grid.gap-2.navLinkDiv
                a#navShopButton.navLink(href='/shop/_/_/_') Shop

              .col.d-grid.gap-2.navLinkDiv
                a#navShopButton.navLink(href='/view_products') Admin
